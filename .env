# --- OFFICIAL DEEPSEEK API (Main Brain) ---
# Docs: https://api-docs.deepseek.com
DEEPSEEK_API_KEY= "сюда"
DEEPSEEK_BASE_URL=https://api.deepseek.com
# Алиасы моделей (актуальны на дек 2025)
MODEL_REASONING=deepseek-reasoner
MODEL_NORMAL=deepseek-chat



# Оператор из РФ
ROUTERAI_API_KEY=  "сюда"
ROUTERAI_BASE_URL=https://routerai.ru/api/v1






# --- OPENROUTER (Auxiliary Analysis) ---
# Docs: https://openrouter.ai/docs
OPENROUTER_API_KEY= "сюда"
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# Рекомендуемые заголовки для OpenRouter (Best Practice)
OPENROUTER_SITE_URL=https://github.com/your-repo/ai-assistant-pro
OPENROUTER_APP_NAME=AI-Assistant-Pro-Desktop
# Модель для дешевого анализа (DeepInfra backend)
MODEL_QWEN=qwen/qwen-2.5-coder-32b-instruct

# --- Specific Model IDs for OpenRouter ---

# Google Gemini 2.0 Flash (быстрая, для роутера и простых задач)
MODEL_GEMINI_2_FLASH=google/gemini-2.0-flash-001

# Google Gemini 3 Pro (средняя сложность)
MODEL_GEMINI_3_PRO=google/gemini-3-pro-preview

# Anthropic Claude 3.5/4.5 Opus (самая мощная, для сложных задач)
MODEL_OPUS_4_5=anthropic/claude-opus-4.5


# В .env можно добавить переменные для управления режимами:
ROUTER_ENABLED=true
ORCHESTRATOR_FIXED_MODEL=anthropic/claude-opus-4.5

# Или для автоматического режима:
ROUTER_ENABLED=true
ORCHESTRATOR_FIXED_MODEL=

# Или для простой фиксированной модели:
ROUTER_ENABLED=false
ORCHESTRATOR_FIXED_MODEL=google/gemini-3-pro

# --- SBER GIGACHAT ---
# Данные из личного кабинета (Base64 или ClientID/Secret)
GIGACHAT_AUTH_KEY= "сюда"
GIGACHAT_SCOPE=GIGACHAT_API_PERS
# ВМЕСТО ОТКЛЮЧЕНИЯ SSL: Путь к цепочке сертификатов Минцифры
# Скачать: https://gu-st.ru/content/lending/russian_trusted_root_ca_pem.crt
# Положите файл в папку certs/ в корне проекта
GIGACHAT_CA_BUNDLE=certs/russian_trusted_root_ca_pem.crt


